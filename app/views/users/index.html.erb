<h1>List of users</h1>
<%= will_paginate %>
<div class="table-responsive">
	<table class="table table-hover">
		<thead>
			<tr>
				<th>First Name   </th>
				<th>Last  Name   </th>
				<th>Email        </th>
				<th>Mobile Number</th>
				<th>Updated At   </th>
			</tr>
		</thead>
		<tbody>
			<% @users.each do |user|%>
				<tr>
					<td><%= user.first_name    %></td>
					<td><%= user.last_name     %></td>
					<td><%= user.email         %></td>
					<td><%= user.mobile_number %></td>
					<td><%= user.updated_at    %></td>
					<td><%= link_to 'Show',user_path(user),class: "btn btn-xs btn-primary"%></td>
					<% if current_user.admin? && !current_user?(user) %>
						<td><%= link_to 'Destroy', user_path(user), method: :delete, data: {confirm: 'Are you
						sure?'},class: "btn btn-xs btn-primary"%></td>
					<% end %>
					</tr>
			<% end %>
		</tbody>	
	</table>
</div>
<%= will_paginate %>
